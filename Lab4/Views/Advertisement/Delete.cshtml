@model Lab4.Models.ViewModels.FileInputViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Delete";
}

<h1>Delete add for community @Model.CommunityTitle</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Answer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            File Name
        </dt>
        <dd class="col-sm-10">
            @Model.File.FileName;
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.File" style="max-width: 400px;" />
        </dd>
    </dl>

    <form asp-action="Delete" asp-route-communityId="@Model.CommunityId" asp-route-id="@Model.CommunityId">
        <input type="hidden" asp-for="@Model.File.FileName" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-id="@Model.CommunityId">Back to List</a>
    </form>
</div>

