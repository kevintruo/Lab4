@model Lab4.Models.ViewModels.AdsViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Index";
}
<h1 class="title">Show ads for community @Model.Community.Title</h1>
<div class="field is-grouped">
    <a class="button is-link" asp-action="Upload" asp-route-id="@Model.Community.Id">Upload New</a> &nbsp;
    <a class="button is-link is-light" asp-controller="Community" asp-action="Index">Back to list</a>
</div>
@if (Model.Advertisements.Count() == 0)
{
    <p>There are no files to display.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th class="has-text-weight-bold">
                    Advertisement ID
                </th>
                <th class="has-text-weight-bold">
                    Community ID
                </th>
                <th class="has-text-weight-bold"> 
                    File Name
                </th>
                <th class="has-text-weight-bold">
                    URL
                </th>
                <th class="has-text-weight-bold"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Advertisements)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AdvertisementId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.community.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FileName)
                </td>
                <td>
                    <img src="@item.Url" style="max-width: 400px;" />
                </td>
                <td>
                    <a class="button is-link" asp-action="Delete" asp-route-id="@item.AdvertisementId" asp-route-communityId="@item.community.Id">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
}

