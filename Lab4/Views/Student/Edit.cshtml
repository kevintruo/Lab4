@model Lab4.Models.Student

@{
    Layout = "_Layout";
    ViewData["Title"] = "Edit";
}
<h1 class="title">Edit</h1>
<br />
<h1 class="subtitle">Student</h1>
<hr />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="has-text-danger"></div>
    <input type="hidden" asp-for="id" />
    <div class="field">
        <label asp-for="LastName" class="label"></label>
        <div class="control">
            <input asp-for="LastName" class="input" type="text" placeholder="Last Name" />
        </div>
        <span asp-validation-for="LastName" class="has-text-danger"></span>
    </div>
    <div class="field">
        <label asp-for="FirstName" class="label"></label>
        <div class="control">
            <input asp-for="FirstName" class="input" type="text" placeholder="First Name" />
        </div>
        <span asp-validation-for="FirstName" class="has-text-danger"></span>
    </div>
    <div class="field">
        <label asp-for="EnrollmentDate" class="label"></label>
        <div class="control">
            <input asp-for="EnrollmentDate" class="input" type="date" />
        </div>
        <span asp-validation-for="EnrollmentDate" class="has-text-danger"></span>
    </div>
    <div class="field is-grouped">
        <div class="control">
            <input type="submit" value="Save" class="button is-link" />
        </div>
        <div class="control">
            <a asp-action="Index" class="button is-link is-light">Back to List</a>
        </div>
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
