@model Lab4.Models.ViewModels.CommunityViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Index";
}

<h1 class="title">Index</h1>
<br />
<a class="button is-link" asp-action="Create">Create New</a>
<hr />
<table class="table is-striped is-narrow is-hoverable is-fullwidth">
    <thead>
        <tr>
            <th>
                Last Name
            </th>
            <th>
                First Name
            </th>
            <th>
                Enrollment Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Students)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EnrollmentDate)
                </td>
                <td>
                    <a class="button is-link" asp-action="Index" asp-route-id="@item.id">Select</a> &nbsp;
                    <a class="button is-link" asp-action="Edit" asp-route-id="@item.id">Edit</a> &nbsp;
                    <a class="button is-link" asp-action="EditMemberships" asp-route-id="@item.id">Edit Memberships</a> &nbsp;
                    <a class="button is-link" asp-action="Details" asp-route-id="@item.id">Details</a> &nbsp;
                    <a class="button is-link" asp-action="Delete" asp-route-id="@item.id">Delete</a> &nbsp;
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.CommunityMemberships != null)
{
    <h3>
        Member of the following communities
    </h3>
    <table class="table">
        <tr>
            @if (Model.CommunityMemberships.Count() > 0)
            {
                <th> Name </th>
            }
            else
            {
                <th> No membership record exist </th>
            }
        </tr>
        @foreach (var item in Model.CommunityMemberships)
        {
            <tr>
                <td>@item.Community.Title</td>
            </tr>
        }
    </table>
}